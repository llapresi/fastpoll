{
  "name": "fastpoll",
  "version": "1.0.0",
  "description": "Full stack real time poll app. Created using Socket.io, Express and Create React App",
  "main": "index.js",
  "scripts": {
    "test": "mocha --watch",
    "dev-server": "nodemon ./server.js",
