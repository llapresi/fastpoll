    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "mysql2": "^2.1.0",
    "pusher": "^3.0.1",
    "sequelize": "^5.21.7",
    "shortid": "^2.2.15"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "mocha": "^6.2.3",
    "mock-req-res": "^1.1.4",
    "nodemon": "^2.0.3",
    "proxyquire": "^2.1.3",
